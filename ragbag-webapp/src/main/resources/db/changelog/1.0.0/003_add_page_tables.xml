<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2024-04-25: create table pages" author="drottstegge">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pages"/>
            </not>
        </preConditions>

        <createTable tableName="pages">
            <column name="id" type="bigint" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true" primaryKeyName="pk_page_id"/>
            </column>
            <column name="version" type="int" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="last_modified" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

            <column name="space_id" type="bigint">
                <constraints nullable="false" referencedTableName="spaces" referencedColumnNames="id"
                  foreignKeyName="fk_pages_space_id"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true" referencedTableName="pages" referencedColumnNames="id"
                  foreignKeyName="fk_pages_parent_id"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false" />
            </column>
            <column name="visibility" type="varchar(80)" defaultValue="PUBLIC">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2024-04-21: create table pages_users" author="drottstegge">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pages_users"/>
            </not>
        </preConditions>

        <createTable tableName="pages_users">
            <column name="page_id" type="bigint">
                <constraints nullable="false" referencedTableName="pages" referencedColumnNames="id"
                  foreignKeyName="fk_pages_users_page_id"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" referencedTableName="users" referencedColumnNames="id"
                  foreignKeyName="fk_pages_users_user_id"/>
            </column>
            <column name="role" type="varchar(40)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addUniqueConstraint tableName="pages_users" columnNames="page_id,user_id"
          constraintName="uc_pages_users_page_id_user_id"/>
    </changeSet>

</databaseChangeLog>